# Production Environment Configuration for Cloud Run Deployment
# This file contains environment-specific settings for production deployment

# Environment identification
ENVIRONMENT=production
LOG_LEVEL=WARNING

# Google Cloud Configuration
GOOGLE_GENAI_USE_VERTEXAI=true

# Agent Configuration
MAX_CONCURRENT_AGENTS=10
MAX_CONCURRENT_TASKS=20
AGENT_TIMEOUT_SECONDS=120
TASK_TIMEOUT_SECONDS=300

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_INTERFACE=false
ENABLE_HOT_RELOAD=false

# Security Settings
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=500
ENABLE_REQUEST_VALIDATION=true
ENABLE_INPUT_SANITIZATION=true

# Monitoring and Logging
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json
ENABLE_TRACE_LOGGING=false
ENABLE_ERROR_TRACKING=true

# Web Interface Settings
ENABLE_WEB_INTERFACE=false  # Disable debug interface in production
WEB_INTERFACE_PORT=8081
ENABLE_WEBSOCKET_MONITORING=false

# Streamlit Interface Settings
ENABLE_STREAMLIT_INTERFACE=true
STREAMLIT_PORT=8501
STREAMLIT_DEBUG_MODE=false
STREAMLIT_THEME=light

# Database Settings
DATABASE_URL=sqlite:///./sessions_production.db
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=60
DATABASE_CONNECTION_RETRY=true

# Cache Settings
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=1800  # 30 minutes
CACHE_MAX_SIZE=5000
CACHE_COMPRESSION=true

# External API Settings
OPENWEATHER_API_TIMEOUT=30
HTTP_REQUEST_TIMEOUT=60
MAX_RETRY_ATTEMPTS=5
RETRY_BACKOFF_FACTOR=2.0

# Cloud Run Specific Settings
PORT=8080
CONTAINER_CONCURRENCY=10
MEMORY_LIMIT=4Gi
CPU_LIMIT=4

# Health Check Settings
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=30
READINESS_CHECK_ENDPOINT=/health/ready
LIVENESS_CHECK_ENDPOINT=/health/live

# CORS Settings
CORS_ORIGINS=["https://your-production-domain.com"]
CORS_ALLOW_CREDENTIALS=false
CORS_MAX_AGE=86400

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_AGENTS=false
ENABLE_ADVANCED_ORCHESTRATION=true

# Resource Optimization
ENABLE_LAZY_LOADING=true
ENABLE_CONNECTION_POOLING=true
ENABLE_RESPONSE_COMPRESSION=true
COMPRESSION_THRESHOLD=1024

# Security Headers
SECURITY_HEADERS_STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains
SECURITY_HEADERS_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_HEADERS_FRAME_OPTIONS=DENY
SECURITY_HEADERS_XSS_PROTECTION=1; mode=block
SECURITY_HEADERS_REFERRER_POLICY=strict-origin-when-cross-origin

# Session Management
SESSION_TIMEOUT_MINUTES=30
SESSION_CLEANUP_INTERVAL_MINUTES=60
MAX_SESSIONS_PER_USER=5

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=1000
API_BURST_LIMIT=100
API_RATE_LIMIT_STRATEGY=sliding_window

# Monitoring and Alerting
ENABLE_PROMETHEUS_METRICS=true
METRICS_ENDPOINT=/metrics
ENABLE_HEALTH_MONITORING=true
ALERT_EMAIL_ENABLED=false  # Configure with your alerting system

# Backup and Recovery
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30