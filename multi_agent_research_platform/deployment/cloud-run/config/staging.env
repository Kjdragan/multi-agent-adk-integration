# Staging Environment Configuration for Cloud Run Deployment
# This file contains environment-specific settings for staging deployment

# Environment identification
ENVIRONMENT=staging
LOG_LEVEL=DEBUG

# Google Cloud Configuration
GOOGLE_GENAI_USE_VERTEXAI=true

# Agent Configuration
MAX_CONCURRENT_AGENTS=5
MAX_CONCURRENT_TASKS=10
AGENT_TIMEOUT_SECONDS=60
TASK_TIMEOUT_SECONDS=120

# Performance Settings
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_INTERFACE=true
ENABLE_HOT_RELOAD=false

# Security Settings
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring and Logging
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json
ENABLE_TRACE_LOGGING=true

# Web Interface Settings
ENABLE_WEB_INTERFACE=true
WEB_INTERFACE_PORT=8081
ENABLE_WEBSOCKET_MONITORING=true
WEBSOCKET_HEARTBEAT_INTERVAL=30

# Streamlit Interface Settings
ENABLE_STREAMLIT_INTERFACE=true
STREAMLIT_PORT=8501
STREAMLIT_DEBUG_MODE=true

# Database Settings
DATABASE_URL=sqlite:///./sessions_staging.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30

# Cache Settings
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# External API Settings (use staging/test endpoints when available)
OPENWEATHER_API_TIMEOUT=10
HTTP_REQUEST_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# Cloud Run Specific Settings
PORT=8080
CONTAINER_CONCURRENCY=5
MEMORY_LIMIT=2Gi
CPU_LIMIT=2

# Health Check Settings
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=10

# CORS Settings
CORS_ORIGINS=["https://staging-domain.com", "http://localhost:3000", "http://localhost:8501"]
CORS_ALLOW_CREDENTIALS=true

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_BETA_AGENTS=true
ENABLE_ADVANCED_ORCHESTRATION=true